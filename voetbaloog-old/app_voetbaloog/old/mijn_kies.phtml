echo "<div style=\"float:left;\">";
{
	// Kies een competitie die je wilt zien
	if ( $this->oPools->count() > 0 )
	{
		$sStyle = "font-weight: bold; font-size: 12px;	letter-spacing: 2px; color: #FF6100;";
		echo "<div style=\"float:left; ".$sStyle."\">";
		if ( $this->bMyGroups === true )
			echo 'Mijn Pools';
		else
			echo 'Pools';
		echo "</div>";

		$sEvent = "onchange=\"this.form.submit();\"";
		$oComboBox = Controls_Factory::createComboBox( "poolid" );
		$oComboBox->putObjectToSelect( $this->oPool );
		$oComboBox->putSource( $this->oPools );
		$oComboBox->removeEmptyRow();
		$oComboBox->putObjectPropertyToShow("**VoetbalOog_Pool::Name** ( **VoetbalOog_Pool::CompetitionSeason::Abbreviation** )");
		$oComboBox->addEvent( $sEvent );

		echo "<div style=\"float:left;\">";
