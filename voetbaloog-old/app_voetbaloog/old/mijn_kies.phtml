		echo "<div style=\"float:left;\">&nbsp;&nbsp;&nbsp;&nbsp;".$oComboBox."</div>";
		if ( $this->oPool !== null and $this->oUser !== null and $this->oPoolUser === null and $this->bPoolHasStarted !== true )
			echo "<div style=\"float:left;\">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href=\"".$this->urlcontroller."/meedoen/competitionseasonid/".$this->oPool->getCompetitionSeason()->getId()."/poolid/".$this->oPool->getId()."/\">meedoen</a></div>";
		echo "</form>";
		echo "</div>";
